<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutMcSettingsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mcSettingHeaderTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="MC Settings"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt"
            android:textStyle="bold" />

        <include
            android:layout="@layout/mc_setting_close_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HomePointSettingtxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Home Point Settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/droneHomePointFromLanding"
                android:layout_width="@dimen/icon_width_mc_settings_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/drone_white" />

            <ImageView
                android:id="@+id/homeDronePointFromController"
                android:layout_width="@dimen/icon_width_mc_settings_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/go_home_person_white" />

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/returnToHomeAltTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Return-to-Home Altitude"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="89dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20-500m)"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editTextReturnToHomeAltitude"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="101dp"
                android:layout_width="@dimen/text_edit_mc_settings_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_borderline_mc_setting"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="30"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/textView7"
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/mc_setting_menu_txt" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maxAltSettingTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Maximum Altitude"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="89dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20-500m)"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editTextMaxAlt"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="101dp"
                android:layout_width="@dimen/text_edit_mc_settings_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_borderline_mc_setting"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="30"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/textView7"
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/mc_setting_menu_txt" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distnaceLimitUpTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Distance Limit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchIsDistanceLimitOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MaxFlightDisSettingTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Maximum Flight Distance"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <Space
            android:layout_width="@dimen/space_mc_settings"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="@dimen/space_mc_settings"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="89dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(15-8000m)"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/editTextMaxDistanceFlight"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="101dp"
                android:layout_width="@dimen/text_edit_mc_settings_width"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_borderline_mc_setting"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="5000"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/textView7"
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/mc_setting_menu_txt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>