<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/black_transparency_50"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:src="@drawable/btn_takeoff_orange" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Off?"
            android:textAlignment="center"
            android:textColor="@color/orange_indicator"
            android:textSize="@dimen/take_off_headline_txt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ensure it is safe to take-off."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/take_off_main_txt" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aircraft will rise to 1.2 M and hover."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/take_off_main_txt" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20" />

        <Button
            android:id="@+id/takeOffOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparency_80"
            android:text="OK"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14" />

        <Button
            android:id="@+id/TakeOffCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparency_80"
            android:text="Cancel"
            android:textColor="@android:color/white" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>