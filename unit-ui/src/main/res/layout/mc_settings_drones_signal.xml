<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutMcSettingsHeaderSignal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mcSettingHeaderDroneSignalTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Drone Signal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt"
            android:textStyle="bold" />

        <include
            layout="@layout/mc_setting_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_mc_settings" />

    <LinearLayout
        android:id="@+id/connectedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparency_90"
        android:orientation="vertical">

        <TextView
            android:id="@+id/droneSignalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Drone Signal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mc_setting_menu_txt" />

        <include
            layout="@layout/mc_settings_drone_signal_layout"
            layout_width="match_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/mc_settings_drone_signal_layout"
            layout_width="match_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/mc_settings_drone_signal_layout"
            layout_width="match_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/mc_settings_drone_signal_layout"
            layout_width="match_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>